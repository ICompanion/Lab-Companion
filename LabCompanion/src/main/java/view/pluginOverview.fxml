<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PluginOverviewController">
   <center>
      <TableView fx:id="pluginTableView" BorderPane.alignment="CENTER">
        <columns>
            <TableColumn fx:id="nameColumn" maxWidth="2000" minWidth="150" prefWidth="600" style="-fx-alignment: CENTER;" text="Nom" />
            <TableColumn fx:id="descriptionColumn" maxWidth="2000" minWidth="150" prefWidth="600" style="-fx-alignment: CENTER;" text="Description" />
            <TableColumn fx:id="authorColumn" maxWidth="2000" minWidth="150" prefWidth="600" style="-fx-alignment: CENTER;" text="Auteur" />
            <TableColumn fx:id="isActiveColumn" maxWidth="2000" minWidth="150" prefWidth="600" style="-fx-alignment: CENTER;" text="Actif" />
        </columns>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </BorderPane.margin>
      </TableView>
   </center>
   <top>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="addPluginButton" alignment="CENTER" mnemonicParsing="false" onAction="#addPluginButtonAction" styleClass="btn_primary" text="Ajouter">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Button>
          <Button fx:id="activatePluginButton" alignment="CENTER" mnemonicParsing="false" onAction="#switchPluginStateButtonAction" styleClass="btn_primary" text="Activer">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="desactivatePluginButton" alignment="CENTER" mnemonicParsing="false" onAction="#switchPluginStateButtonAction" styleClass="btn_primary" text="Desactiver">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </top>
</BorderPane>
