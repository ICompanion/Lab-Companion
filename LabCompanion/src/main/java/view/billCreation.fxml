<BorderPane maxHeight="400.0" maxWidth="1000.0" prefHeight="352.0" prefWidth="529.0" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BillCreationController">
<top>
    <HBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
        <children>
            <Label text="Création d'une facture">
                <HBox.margin>
                    <Insets bottom="10.0" right="40.0" top="10.0" />
                </HBox.margin></Label>
        </children></HBox>
</top>
<center>
    <GridPane maxHeight="400.0" maxWidth="500.0" prefHeight="315.0" prefWidth="493.0" BorderPane.alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="56.0" minHeight="10.0" prefHeight="42.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="50.0" minHeight="24.0" prefHeight="38.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Montant :  " GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            <Label alignment="CENTER" contentDisplay="CENTER" text="Adresse de Facturation" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
            <Button fx:id="registerButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#registerButtonAction" styleClass="btn_primary" text="Enregistrer" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="7" GridPane.valignment="CENTER">
                <GridPane.margin>
                    <Insets />
                </GridPane.margin></Button>
            <Button fx:id="backButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#backButtonAction" styleClass="btn_primary" text="Retour visites" GridPane.rowIndex="7">
                <GridPane.margin>
                    <Insets bottom="5.0" left="10.0" top="5.0" />
                </GridPane.margin></Button>
            <Label alignment="CENTER" contentDisplay="CENTER" text="numéro de l'analyse : " GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER" />
            <TextField fx:id="priceTextField" maxHeight="40.0" maxWidth="150.0" GridPane.columnIndex="1">
                <GridPane.margin>
                    <Insets bottom="5.0" top="5.0" />
                </GridPane.margin></TextField>
            <TextField fx:id="adressTextField" maxHeight="40.0" maxWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <GridPane.margin>
                    <Insets bottom="5.0" top="5.0" />
                </GridPane.margin></TextField>
            <TextField fx:id="analysisNumTextField" maxHeight="40.0" maxWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                <GridPane.margin>
                    <Insets bottom="5.0" top="5.0" />
                </GridPane.margin></TextField>
            <Label fx:id="warningLabel" text="Veuillez remplir tous les champs !" textFill="#ee1a1a" visible="false" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="6" />
            <Button fx:id="updateButtonAction" mnemonicParsing="false" onAction="#saveButtonAction" styleClass="btn_primary" text="Sauvegarder" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="7">
                <GridPane.margin>
                    <Insets left="30.0" />
                </GridPane.margin>
            </Button>
            <ComboBox fx:id="statutComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Label fx:id="statutLabel" text="Statut :" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
        </children>
    </GridPane>
</center>
<effect>
    <InnerShadow blurType="TWO_PASS_BOX">
        <input>
            <Reflection />
        </input>
    </InnerShadow>
</effect>
</BorderPane>
